pipeline{
    agent any
    tools {
        maven 'maven'
    }
    stages{
        stage("Git Checkout"){
            steps{
                git branch: 'main', url: 'https://github.com/siswarnava-sss/ecommerce2'
            }
        }
        stage("Go to backend folder"){
            steps{
                sh 'mvn -f ./backend/pom.xml clean package -DskipTests=true'
            }
        }
        stage("Static Code analysis")
        {
            steps{
                script{
                    withSonarQubeEnv(credentialsId: 'sonar-api'){
                        sh 'mvn -f ./backend/pom.xml clean verify sonar:sonar \
                                -Dsonar.projectKey=springapp \
                                -Dsonar.host.url=http://20.207.201.150:9000 \
                                -Dsonar.login=sqp_940544f83c0b4c3d8e8588b83b4ccf17f0455e4d'
                }
            }
        }
        }
        stage("nexus"){
            steps{
                script{
                    nexusArtifactUploader artifacts: 
                    [
                        [artifactId: 'shop-api', classifier: '', file: '/backend/target/ecommerce-spring-boot.jar', type: 'jar'
                        ]
                        ], 
                        credentialsId: '', 
                        groupId: 'me.zhulin',
                        nexusUrl: 'http://20.207.201.150:8081', 
                        nexusVersion: 'nexus3', 
                        protocol: 'http', 
                        repository: 'http://20.207.201.150:8081/repository/springapp/', 
                        version: '0.0.1-SNAPSHOT'
                }
            }
        }
        
        
    }
}
